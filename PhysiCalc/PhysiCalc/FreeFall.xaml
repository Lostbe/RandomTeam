<Window x:Class="PhysiCalc.FreeFall"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhysiCalc"
        mc:Ignorable="d"
        Title="FreeFall" Height="363.468" Width="301.064">
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition Height="269*"/>
            <RowDefinition Height="146*"/>
        </Grid.RowDefinitions>
        <RadioButton x:Name="radioButtonHeight" Content="Height of ledge" HorizontalAlignment="Left" Margin="90,50,0,0" VerticalAlignment="Top" Checked="radioButtonHeight_Checked"/>
        <RadioButton x:Name="radioButtonTime" Content="Time of freefall" HorizontalAlignment="Left" Margin="90,79,0,0" VerticalAlignment="Top" Checked="radioButtonTime_Checked"/>
        <Label x:Name="label" Content="What would you like to know?" HorizontalAlignment="Left" Margin="65,8,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlockChoiceInstruction" HorizontalAlignment="Left" Margin="10,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Height="49" TextAlignment="Center"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="114" Height="23"/>
        <TextBox x:Name="textBoxChoiceData" HorizontalAlignment="Left" Height="23" Margin="90,179,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="buttonCalc" Content="Calculate" HorizontalAlignment="Left" Margin="113,0,0,0" VerticalAlignment="Top" Width="75" Height="33" Grid.Row="1"/>
        <TextBlock x:Name="textBlockResult" HorizontalAlignment="Left" Margin="97,57,0,0" TextWrapping="Wrap" Width="105" Grid.Row="1" Height="31" VerticalAlignment="Top"/>
        <Button x:Name="backToMenuBtn" Content="Back to menu" HorizontalAlignment="Left" Margin="207,48,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75" Click="backToMenuBtn_Click"/>

    </Grid>
</Window>
